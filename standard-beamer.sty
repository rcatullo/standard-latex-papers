%%%%%%%%%%%%%% BEAMER STANFORD COLORS %%%%%%%%%%%%%%
\mode<presentation>
{
%% Define Stanford Colors %%
\definecolor{stanfordred}{RGB}{140, 21, 21} % Cardinal Red
\definecolor{darkgray}{RGB}{77, 79, 83}     % Dark Gray
\definecolor{coolgray}{RGB}{94, 106, 113}   % Cool Gray
\definecolor{black}{RGB}{46, 45, 41}        % Black
\definecolor{white}{RGB}{255, 255, 255}     % White
\definecolor{highlight}{RGB}{184, 58, 75}   % Stanford Red
\definecolor{example}{RGB}{38, 140, 81}     % Greenish accent for examples
\definecolor{alert}{RGB}{179, 60, 35}       % Orange-red alert
\definecolor{bgcolor}{RGB}{240, 240, 240}   % Light gray background
%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%% General Color Setup %%
\setbeamercolor{normal text}{fg=black,bg=white}
\setbeamercolor{structure}{fg=stanfordred} 
\setbeamercolor{frametitle}{fg=white,bg=stanfordred} 
\setbeamercolor{title}{fg=white,bg=stanfordred} 
\setbeamercolor{subtitle}{fg=white} 
%%%%%%%%%%%%%%%%%%%%%%%%%

%% Blocks %%
\setbeamercolor{block title}{fg=white,bg=stanfordred}
\setbeamercolor{block body}{fg=black,bg=bgcolor}
%%%%%%%%%%%%

%% Alert Blocks %%
\setbeamercolor{alertblock title}{fg=white,bg=alert}
\setbeamercolor{alertblock body}{fg=black,bg=bgcolor}
%%%%%%%%%%%%%%%%%%

%% Example Blocks %%
\setbeamercolor{exampleblock title}{fg=white,bg=example}
\setbeamercolor{exampleblock body}{fg=black,bg=bgcolor}
%%%%%%%%%%%%%%%%%%%%

%% Highlighted Text %%
\setbeamercolor{highlighted}{fg=white,bg=highlight}
%%%%%%%%%%%%%%%%%%%%%%

%% Navigation Bar %%
\setbeamercolor{palette primary}{fg=white,bg=stanfordred}
\setbeamercolor{palette secondary}{fg=white,bg=darkgray}
\setbeamercolor{palette tertiary}{fg=white,bg=coolgray}
\setbeamercolor{palette quaternary}{fg=black,bg=bgcolor}
%%%%%%%%%%%%%%%%%%%%

%% Itemize and Enumerate %%
\setbeamercolor{item}{fg=stanfordred}
\setbeamercolor{item projected}{fg=white,bg=stanfordred}
%%%%%%%%%%%%%%%%%%%%%%%%%%%
}
